import java.util.Scanner;

public class RestaurantBilling {
		
	public static void main(String[] args) {
		
		int dosa = 25;
		int idli = 30;
		int noodles = 20;
		int vadapaav = 30;
		int juice = 15;
		int quantity;
		int totalBill = 0;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Select food Items and quantity");
		System.out.print("1. dosa");
		System.out.print("2. idli");
		System.out.print("3. noodles");
		System.out.print("4. vadapaav");
		System.out.print("5. Juice");
		System.out.print("6. Total Bill");
		
		int choice;
		
		do {
			choice = sc.nextInt();
			
			switch(choice) {
				case 1:
					System.out.println("Enter quantity for dosa:");
					quantity = sc.nextInt();
					totalBill += dosa * quantity;
					break;
				case 2:
					System.out.println("Enter quantity for idli:");
					quantity = sc.nextInt();
					totalBill += idli * quantity;
					break;
				case 3:
					System.out.println("Enter quantity for noodles:");
					quantity = sc.nextInt();
					totalBill += noodles * quantity;
					break;
				case 4:
					System.out.println("Enter quantity for vadapaav:");
					quantity = sc.nextInt();
					totalBill += vadapaav * quantity;
					break;
				case 5:
					System.out.println("Enter quantity for Juice:");
					quantity = sc.nextInt();
					totalBill += juice * quantity;
					break;
				case 6:
					System.out.println("Total Bill: $" + totalBill);
					break;
				default:
					System.out.println("Invalid choice");
			}
		} while(choice != 0);
		
		sc.close();
	}
}
